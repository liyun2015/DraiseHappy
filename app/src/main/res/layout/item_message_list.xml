<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/message_image"
            android:layout_width="45dp"
            android:scaleType="fitXY"
            android:layout_margin="8dp"
            android:src="@drawable/mes_type_icon"
            android:layout_height="45dp" />
        <ImageView
            android:id="@+id/message_remend_icon"
            android:layout_width="wrap_content"
            android:src="@drawable/red_icon"
            android:layout_alignRight="@id/message_image"
            android:layout_marginTop="4dp"
            android:layout_alignTop="@id/message_image"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/message_type_layout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="3dp"
            android:layout_alignTop="@id/message_image"
            android:layout_alignBottom="@id/message_image"
            android:layout_toRightOf="@id/message_image"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/message_title"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/user_header_pic"
                android:textSize="14sp"
                android:text="系统消息"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:textColor="@color/text_gray_9"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:textSize="11sp"
                android:text="12:26"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/message_infor"
                android:layout_width="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="12sp"
                android:layout_marginRight="30dp"
                android:layout_alignParentBottom="true"
                android:text="[链接]12岁留美天才女孩获得太空中的特异功能..."
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/divider_1"
        android:layout_height="0.5dp"/>
</LinearLayout>