<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/yaming_pic_image"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/default_photoalbum_img"
        android:layout_height="200dp" />
    <TextView
        android:id="@+id/yaming_news_title"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="3dp"
        tools:text="边开飞机边摄影！轰6k男神机长拍下黄岩岛美照"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/yaming_news_source"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:paddingTop="2.5dp"
            android:paddingBottom="2.5dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="center"
            android:background="@drawable/shape_round_gray_stroke_wihoutsolid"
            android:textColor="@color/text_gray_89"
            tools:text="新华社"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/comment_icon"
            android:layout_marginLeft="8dp"
            android:visibility="gone"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/comment_num"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:visibility="gone"
            android:textColor="@color/text_gray_89"
            android:text="356"
            android:layout_marginLeft="4dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/comment_time_icon"
            android:layout_marginLeft="8dp"
            android:visibility="gone"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/text_gray_89"
            android:text="3小时"
            android:visibility="gone"
            android:layout_marginLeft="4dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>