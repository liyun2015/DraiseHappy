<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/font_black_f4"
    android:layout_height="match_parent">
    <include layout="@layout/include_toolbar" />
    <View
        android:layout_width="match_parent"
        android:background="@color/divider_pink"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="125dp">
        <ImageView
            android:id="@+id/user_header_image"
            android:layout_width="60dp"
            android:src="@drawable/header_default"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="60dp" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="更换头像"
            android:layout_marginTop="12dp"
            android:textColor="@color/text_gray_9"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/user_name_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:text="昵称"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_gray_9"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:text="小燕子"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_gray_3"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>