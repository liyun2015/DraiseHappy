<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_member_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uban.rent.ui.activity.member.MemberStatusActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/include_toolbar"/>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/member_status_call_phone"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="免费咨询"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_phone_red_small"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/payment_submit_btn"
            android:layout_width="0dp"
            android:background="@color/colorAccent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:text="立即支付"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>
    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_above="@id/bottom_view"
        android:background="@color/divider_1" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_line"
        android:layout_below="@id/top_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/member_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单编号：161109"
                        android:textColor="@color/colorPrimary"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp" />
                    <TextView
                        android:id="@+id/member_order_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGray"
                        android:textSize="12sp"
                        android:text="2016.11.11  20:11:55"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/member_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="审核成功"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/divider_2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="会员信息"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="持卡人："
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/member_status_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周诗雨"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="持卡人联系电话："
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/member_status_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13911616254"
                    android:textSize="14sp"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/divider_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="订单信息"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:text="服务：优办会员"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="服务范围：可免费享受优办移动办公合作空间内的hot desk活动区域以及免费饮品"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="订单价格：0元"/>
            <TextView
                android:id="@+id/member_date_expiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="有效期：2016.11.20-2016.12.20"/>
        </LinearLayout>


    </ScrollView>
</RelativeLayout>
