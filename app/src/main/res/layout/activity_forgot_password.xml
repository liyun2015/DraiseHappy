<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_black_f4"
    android:orientation="vertical"
    tools:context="com.or.draise_happy.ui.activity.login.RegisterActivity">


    <include layout="@layout/include_toolbar" />
    <View
        android:layout_width="match_parent"
        android:background="@color/divider_pink"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_pone_number"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="请输入您的手机号"
            android:maxLength="11"
            android:inputType="number"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/font_black_2"
            android:textColorHint="@color/text_gray_9"
            android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:background="@color/divider_1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="0.5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/get_verification_code_btn"
                android:layout_width="wrap_content"
                android:text="发送验证码"
                android:layout_marginRight="20dp"
                android:textSize="15sp"
                android:textColor="@color/pink"
                android:padding="4dp"
                android:background="@drawable/shape_box_pink_background"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_verification_code"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="请输入验证码"
                android:layout_toLeftOf="@id/get_verification_code_btn"
                android:maxLength="11"
                android:background="@null"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/font_black_2"
                android:textColorHint="@color/text_gray_9"
                android:textSize="15sp" />
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/forget_password_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:text="忘记密码？"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:textColor="@color/text_gray_a"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_next_submit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_filling_uban_blue"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
