<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_orders_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.uban.rent.ui.activity.OrdersDetailActivity">
    <RelativeLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/include_toolbar" />
    </RelativeLayout>
    <!--底部-->
    <LinearLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="7"
            android:gravity="center"
            android:textColor="@color/colorGrayHint"
            android:textSize="15sp"
            android:text="取消订单" />
        <TextView
            android:id="@+id/order_create"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="8"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:id="@+id/bottom_line"
        android:layout_above="@id/bottom_view"
        android:layout_width="match_parent"
        android:background="@color/font_black_7"
        android:layout_height="0.6dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_below="@id/top_view"
        android:layout_above="@id/bottom_line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单编号：163887"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="2016.11.17 20:15:23"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/colorGrayHint"
                        android:textSize="12sp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/order_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="订单状态：等待支付"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:background="@color/font_black_9"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/order_build_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WE+中区广场"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableLeft="@drawable/location_icon"
                        android:drawablePadding="5dp"
                        android:text="北京东城区东四北大街107号  科林大厦B座108室"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/colorGray"
                        android:textSize="12sp"
                        android:id="@+id/textView" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right_gray"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="15dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="独立工位"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/price_of_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50元/时"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/price_of_hour"
                    android:layout_marginRight="15dp"
                    android:text="时租"
                    android:textColor="@color/colorGray"
                    android:textSize="15sp" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@color/divider_2"
                android:layout_height="0.6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预定信息"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预定数量"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorGray"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/station_str"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工位"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorGray"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/station_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/station_str"
                    android:textColor="@color/colorGray"
                    android:textSize="15sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorGray"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/time_str"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    时"
                    android:textColor="@color/colorGray"
                    android:textSize="13sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
                <TextView
                    android:id="@+id/time_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/time_str"
                    android:textColor="@color/colorGray"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11月17日  15:50"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorGray"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorGray"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11月17日  18:50"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/right_arrows1"
                    android:textColor="@color/colorGray"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorGray"
                    android:textSize="13sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/divider_2"
                android:layout_height="0.6dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/colorGray"
                    android:textSize="12sp"
                    android:text="数量" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:textColor="@color/colorGray"
                    android:textSize="12sp"
                    android:text="时间" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:textColor="@color/colorGray"
                    android:textSize="12sp"
                    android:text="单价" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/colorGray"
                    android:textSize="12sp"
                    android:text="总价" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:text="1"
                    android:id="@+id/textView6" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:text="4小时"
                    android:id="@+id/textView5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:text="50元时" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:text="200元"
                    android:id="@+id/textView4" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:background="@color/divider_2"
                android:layout_height="0.6dp"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/font_black_7"
                android:layout_height="10dp"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/divider_2"
                android:layout_height="0.6dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="15dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付方式"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线支付"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorGray"
                    android:textSize="15sp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/divider_2"
                android:layout_height="0.6dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/switch_btn_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:button="@drawable/checkbox_style"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝"
                    android:textColor="@color/colorGray"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_pay_alipay"
                    android:drawablePadding="10dp"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:layout_alignParentLeft="true" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/divider_2"
                android:layout_height="0.6dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/switch_btn_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:button="@drawable/checkbox_style"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信支付"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_pay_wechat"
                    android:textColor="@color/colorGray"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:layout_alignParentLeft="true" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/divider_2"
                android:layout_height="0.6dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
