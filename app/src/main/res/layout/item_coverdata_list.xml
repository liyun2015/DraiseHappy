<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/cover_pic_image"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/cover_pic1"
        android:layout_height="200dp" />
    <TextView
        android:id="@+id/cover_news_title"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="3dp"
        android:text="春节临近，各大型商场和高速公路出口的大型彩灯组正在紧张布置中。"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/cover_news_source"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="10sp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:background="@drawable/shape_round_gray_stroke_wihoutsolid"
        android:textColor="@color/text_gray_89"
        android:text="新华社"
        android:layout_height="wrap_content" />
</LinearLayout>