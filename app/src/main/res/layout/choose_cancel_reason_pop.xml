<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:background="@color/font_black_7"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/submit_btn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:text="完成"
            android:textColor="@color/colorGray"
            android:textSize="16sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/cancel_reason_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="我要重新预定"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/cancel_reason_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="下错订单"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@color/colorGrayHint"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/cancel_reason_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="不需要预定了"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@color/colorGrayHint"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/cancel_reason_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="其他"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@color/colorGrayHint"
        android:textSize="16sp"/>
</LinearLayout>