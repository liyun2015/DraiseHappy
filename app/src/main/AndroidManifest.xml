        <activity
            android:name=".ui.activity.other.SettingActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.activity.welcome.slide.WelcomeActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ui.activity.other.AgreementActivity" />
        <activity android:name=".ui.activity.other.AboutUsActivity"></activity>
    </application>

</manifest>